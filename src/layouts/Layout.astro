---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Katie Williamson - UX Content Strategy Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Katie Williamson</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<nav>
			<div class="container">
				<a href="/" class="brand">KW.</a>
				<div class="links">
					<a href="/">Home</a>
					<a href="#strengths">Strengths</a>
					<a href="#projects">Projects</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<div class="container">
				<p>&copy; {new Date().getFullYear()} Katie Williamson. Built with Astro.</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 255, 107, 107;
		--accent-light: 255, 165, 165;
		--accent-dark: 200, 50, 50;
		--text: #333;
		--bg: #fff;
		--bg-secondary: #f9f9f9;
	}
	html {
		font-family: 'Inter', sans-serif;
		background: var(--bg);
		color: var(--text);
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
		line-height: 1.6;
	}
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	nav {
		background: #fff;
		border-bottom: 1px solid #eee;
		position: sticky;
		top: 0;
		z-index: 10;
		padding: 1rem 0;
	}
	nav .container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.brand {
		font-weight: 800;
		font-size: 1.5rem;
		text-decoration: none;
		color: var(--text);
	}
	.links a {
		margin-left: 2rem;
		text-decoration: none;
		color: #666;
		font-weight: 600;
		transition: color 0.2s;
	}
	.links a:hover {
		color: rgb(var(--accent));
	}
	main {
		min-height: 80vh;
	}
	footer {
		background: var(--bg-secondary);
		padding: 2rem 0;
		text-align: center;
		margin-top: 4rem;
		color: #888;
	}
	h1, h2, h3, h4 {
		line-height: 1.2;
	}
</style>
