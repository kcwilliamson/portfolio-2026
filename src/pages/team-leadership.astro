---
import { portfolioPieces } from '../data/portfolio';
const project = portfolioPieces.find(p => p.slug === 'team-leadership');
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{project.title} | Katie Sebkhi Williamson</title>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<a href="/" class="back-link">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
			</a>
			<div class="name-section">
				<h1 class="name">KATIE<br>WILLIAMSON<br>SEBKHI</h1>
			<div class="taglines">
				<p>UX Intelligence Pioneer</p>
				<p>Digital Storyteller</p>
				<p>Empathetic Leader</p>
			</div>
				<div class="social-icons">
					<a href="https://www.linkedin.com/in/katie-williamson-sebkhi-8787a85b/" target="_blank" aria-label="LinkedIn">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
						</svg>
					</a>
					<a href="https://github.com/kcwilliamson" target="_blank" aria-label="GitHub">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
				<a href="#" class="email-copy-btn" data-email="thekatiewilliamson@gmail.com" aria-label="Email">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/>
					</svg>
				</a>
				<a href="/blog" aria-label="Blog">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M6 2c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6H6zm7 7V3.5L18.5 9H13z"/>
					</svg>
				</a>
			</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="header-section">
				<h1 class="page-title">{project.title}</h1>
				<p class="subtitle">{project.subtitle}</p>
			</div>
			<div class="three-column-layout">
				<div class="content-column">
					{project.sections.map((section) => (
						<div class="section-block">
							<h2 class="section-heading">{section.heading}</h2>
							<div class="section-content">
								{section.content.split('\n\n').map((paragraph) => {
									// Replace **text** with <strong>text</strong>
									const formatted = paragraph.replaceAll(/\*\*([^*]+?)\*\*/g, '<strong>$1</strong>');
									return <p set:html={formatted} />;
								})}
							</div>
						</div>
					))}
				</div>
				
				{project.sections.flatMap((section) => section.examples).length > 0 && (
					<div class="gallery-column">
						{project.sections.flatMap((section) => section.examples).map((example, index) => (
							<div class="gallery-item" data-index={index} onclick={`openModal(${index}, '${example.caption.replace(/'/g, "\\'")}')`}>
								<div class="placeholder-image">
									<svg width="100%" height="100%" viewBox="0 0 400 400" fill="none">
										<rect width="400" height="400" fill="rgba(0,0,0,0.1)"/>
										<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="14" font-family="Inter">
											Image
										</text>
									</svg>
								</div>
							</div>
						))}
					</div>
				)}
			</div>
		</div>
		
		<div id="imageModal" class="modal" onclick="closeModal()">
			<div class="modal-content" onclick="event.stopPropagation()">
				<button class="modal-close" onclick="closeModal()">&times;</button>
				<div class="modal-image">
					<svg width="100%" height="100%" viewBox="0 0 800 800" fill="none">
						<rect width="800" height="800" fill="rgba(0,0,0,0.1)"/>
						<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="24" font-family="Inter">
							Full Size Image
						</text>
					</svg>
				</div>
				<h3 class="modal-title" id="modalTitle"></h3>
				<p class="modal-description" id="modalDescription"></p>
			</div>
		</div>
	</div>
	
	<script>
		function openModal(index, caption) {
			const modal = document.getElementById('imageModal');
			const title = document.getElementById('modalTitle');
			const description = document.getElementById('modalDescription');
			
			title.textContent = 'Project Example ' + (index + 1);
			description.textContent = caption;
			modal.classList.add('active');
			document.body.style.overflow = 'hidden';
		}
		
		function closeModal() {
			const modal = document.getElementById('imageModal');
			modal.classList.remove('active');
			document.body.style.overflow = 'auto';
		}
		
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') closeModal();
		});
	</script>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		background: #00FFFF;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 0.6fr 4fr;
		min-height: 100vh;
	}
	
	@media (min-width: 1025px) {
		body {
			overflow: hidden;
			height: 100vh;
		}
		
		.split-container {
			height: 100vh;
		}
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: all 0.2s;
		padding: 1rem;
		margin: -1rem;
		display: inline-block;
		background: #ffffff;
		border-radius: 50%;
		border: 2px solid rgba(0, 0, 0, 0.1);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}
	
	.back-link:hover {
		transform: translateX(-5px) scale(1.1);
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
		white-space: nowrap;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.social-icons {
		display: flex;
		gap: 1.5rem;
	}
	
	.social-icons a {
		color: #000;
		transition: opacity 0.2s;
	}
	
	.social-icons a:hover {
		opacity: 0.6;
	}
	
	.right-panel {
		background: #FFFFFF;
		overflow-y: auto;
		overflow-x: hidden;
		padding: 0;
		color: #000000;
	}
	
	.header-section {
		background: #00FFFF;
		color: #FFFFFF;
		padding: 3rem 4rem;
		width: 100%;
	}
	
	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 900;
		margin-bottom: 1rem;
		line-height: 1;
		color: #FFFFFF;
	}
	
	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		color: #000000;
	}
	
	.three-column-layout {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		max-width: 100%;
		background: #FFFFFF;
		padding: 4rem;
	}
	
	.gallery-column {
		position: fixed;
		right: 2rem;
		top: 12rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-height: calc(100vh - 14rem);
		overflow-y: auto;
		width: 150px;
	}
	
	.content-column {
		max-width: 100%;
		padding-right: 10rem;
	}
	
	.section-block {
		margin-bottom: 5rem;
	}
	
	.section-heading {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
		color: #000000;
	}
	
	.section-content {
		margin-bottom: 2rem;
	}
	
	.section-content p {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 1.5rem;
		color: #000000;
	}
	
	.section-content p:last-child {
		margin-bottom: 0;
	}
	
	/* Indent all bullet points */
	.section-content p {
		position: relative;
	}
	
	.section-content p:has(strong:first-child) {
		padding-left: 2.5rem;
		text-indent: -2.5rem;
	}
	.section-content p:has(strong:first-child),
	.section-content p:first-of-type:has(strong) {
		padding-left: 2rem;
		text-indent: -2rem;
	}
	
	.gallery-item {
		background: rgba(0, 0, 0, 0.05);
		border: 2px solid rgba(0, 0, 0, 0.1);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s;
		cursor: pointer;
		max-width: 150px;
	}
	
	.gallery-item:hover {
		transform: scale(1.1);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
		border-color: rgba(0, 0, 0, 0.3);
	}
	
	.placeholder-image {
		width: 100%;
		aspect-ratio: 1/1;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.9);
		z-index: 1000;
		align-items: center;
		justify-content: center;
	}
	
	.modal.active {
		display: flex;
	}
	
	.modal-content {
		background: #00FFFF;
		padding: 3rem;
		border-radius: 20px;
		max-width: 800px;
		width: 90%;
		max-height: 90vh;
		overflow-y: auto;
		position: relative;
		color: #000;
	}
	
	.modal-close {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(0, 0, 0, 0.2);
		border: none;
		color: #000;
		font-size: 2rem;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background 0.3s;
	}
	
	.modal-close:hover {
		background: rgba(0, 0, 0, 0.3);
	}
	
	.modal-image {
		width: 100%;
		margin-bottom: 2rem;
		border-radius: 12px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}
	
	.modal-description {
		font-size: 1.125rem;
		line-height: 1.6;
		opacity: 0.9;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto auto;
			min-height: auto;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
			position: static;
			height: auto;
		}
		
		.right-panel {
			padding: 0;
			height: auto;
			overflow-y: visible;
		}
		
		.header-section {
			padding: 2rem;
		}
		
		.three-column-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 2rem;
		}
		
		.gallery-column {
			position: static;
		}
	}
</style>
