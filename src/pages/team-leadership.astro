---
import { portfolioPieces } from '../data/portfolio';
const project = portfolioPieces.find(p => p.slug === 'team-leadership');
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{project.title} | Katie Sebkhi Williamson</title>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<a href="/" class="back-link">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
			</a>
			<div class="name-section">
				<h1 class="name">KATIE<br>WILLIAMSON<br>SEBKHI</h1>
				<div class="taglines">
					<p>Digital Storyteller</p>
					<p>Content Crusader</p>
					<p>UX Intelligence Leader</p>
				</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="three-column-layout">
				<div class="content-column">
					<h1 class="page-title">{project.title}</h1>
					<p class="subtitle">{project.subtitle}</p>
					
					{project.sections.map((section) => (
						<div class="section-block">
							<h2 class="section-heading">{section.heading}</h2>
							<div class="section-content">
								{section.content.split('\n\n').map((paragraph) => {
									// Replace **text** with <strong>text</strong>
									const formatted = paragraph.replaceAll(/\*\*([^*]+?)\*\*/g, '<strong>$1</strong>');
									return <p set:html={formatted} />;
								})}
							</div>
						</div>
					))}
				</div>
				
				<div class="gallery-column">
					{project.sections.flatMap((section) => section.examples).map((example, index) => (
						<div class="gallery-item" data-index={index} onclick={`openModal(${index}, '${example.caption.replace(/'/g, "\\'")}')`}>
							<div class="placeholder-image">
								<svg width="100%" height="100%" viewBox="0 0 400 400" fill="none">
									<rect width="400" height="400" fill="rgba(0,0,0,0.1)"/>
									<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="14" font-family="Inter">
										Image
									</text>
								</svg>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
		
		<div id="imageModal" class="modal" onclick="closeModal()">
			<div class="modal-content" onclick="event.stopPropagation()">
				<button class="modal-close" onclick="closeModal()">&times;</button>
				<div class="modal-image">
					<svg width="100%" height="100%" viewBox="0 0 800 800" fill="none">
						<rect width="800" height="800" fill="rgba(0,0,0,0.1)"/>
						<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="24" font-family="Inter">
							Full Size Image
						</text>
					</svg>
				</div>
				<h3 class="modal-title" id="modalTitle"></h3>
				<p class="modal-description" id="modalDescription"></p>
			</div>
		</div>
	</div>
	
	<script>
		function openModal(index, caption) {
			const modal = document.getElementById('imageModal');
			const title = document.getElementById('modalTitle');
			const description = document.getElementById('modalDescription');
			
			title.textContent = 'Project Example ' + (index + 1);
			description.textContent = caption;
			modal.classList.add('active');
			document.body.style.overflow = 'hidden';
		}
		
		function closeModal() {
			const modal = document.getElementById('imageModal');
			modal.classList.remove('active');
			document.body.style.overflow = 'auto';
		}
		
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') closeModal();
		});
	</script>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		overflow: hidden;
		height: 100vh;
		background: #00FFFF;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 1fr 4fr;
		height: 100vh;
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: all 0.2s;
		padding: 1rem;
		margin: -1rem;
		display: inline-block;
		background: #ffffff;
		border-radius: 50%;
		border: 2px solid rgba(0, 0, 0, 0.1);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}
	
	.back-link:hover {
		transform: translateX(-5px) scale(1.1);
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
		white-space: nowrap;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.right-panel {
		background: #00FFFF;
		overflow-y: auto;
		overflow-x: hidden;
		padding: 4rem;
		color: #000;
	}
	
	.three-column-layout {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		max-width: 100%;
	}
	
	.gallery-column {
		position: fixed;
		right: 2rem;
		top: 4rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-height: calc(100vh - 8rem);
		overflow-y: auto;
		width: 150px;
	}
	
	.content-column {
		max-width: 100%;
		padding-right: 10rem;
	}
	
	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 900;
		margin-bottom: 1rem;
		line-height: 1;
	}
	
	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		margin-bottom: 4rem;
		opacity: 0.8;
	}
	
	.section-block {
		margin-bottom: 5rem;
	}
	
	.section-heading {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
	}
	
	.section-content {
		margin-bottom: 2rem;
	}
	
	.section-content p {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}
	
	.section-content p:last-child {
		margin-bottom: 0;
	}
	
	/* Indent bullet points */
	.section-content p:has(strong:first-child) {
		padding-left: 2rem;
		text-indent: -2rem;
	}
	
	.gallery-item {
		background: rgba(0, 0, 0, 0.05);
		border: 2px solid rgba(0, 0, 0, 0.1);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s;
		cursor: pointer;
		max-width: 150px;
	}
	
	.gallery-item:hover {
		transform: scale(1.1);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
		border-color: rgba(0, 0, 0, 0.3);
	}
	
	.placeholder-image {
		width: 100%;
		aspect-ratio: 1/1;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.9);
		z-index: 1000;
		align-items: center;
		justify-content: center;
	}
	
	.modal.active {
		display: flex;
	}
	
	.modal-content {
		background: #00FFFF;
		padding: 3rem;
		border-radius: 20px;
		max-width: 800px;
		width: 90%;
		max-height: 90vh;
		overflow-y: auto;
		position: relative;
		color: #000;
	}
	
	.modal-close {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(0, 0, 0, 0.2);
		border: none;
		color: #000;
		font-size: 2rem;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background 0.3s;
	}
	
	.modal-close:hover {
		background: rgba(0, 0, 0, 0.3);
	}
	
	.modal-image {
		width: 100%;
		margin-bottom: 2rem;
		border-radius: 12px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}
	
	.modal-description {
		font-size: 1.125rem;
		line-height: 1.6;
		opacity: 0.9;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
		}
		
		.right-panel {
			padding: 2rem;
		}
		
		.three-column-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.gallery-column {
			position: static;
		}
	}
</style>
