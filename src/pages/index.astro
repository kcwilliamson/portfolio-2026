<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		overflow: hidden;
		height: 100vh;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		height: 100vh;
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(3rem, 8vw, 6rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
	}
	
	.name span {
		display: inline-block;
		transition: color 0.3s ease;
		cursor: pointer;
	}
	
	.name span:hover { color: #FF6B35; }
	.name span:nth-child(2):hover { color: #FF1493; }
	.name span:nth-child(3):hover { color: #9D00FF; }
	.name span:nth-child(4):hover { color: #00FFFF; }
	.name span:nth-child(5):hover { color: #00FF00; }
	.name span:nth-child(7):hover { color: #FF1493; }
	.name span:nth-child(8):hover { color: #9D00FF; }
	.name span:nth-child(9):hover { color: #00FFFF; }
	.name span:nth-child(10):hover { color: #00FF00; }
	.name span:nth-child(11):hover { color: #FF6B35; }
	.name span:nth-child(12):hover { color: #FF1493; }
	.name span:nth-child(13):hover { color: #9D00FF; }
	.name span:nth-child(14):hover { color: #00FFFF; }
	.name span:nth-child(15):hover { color: #00FF00; }
	.name span:nth-child(17):hover { color: #FF6B35; }
	.name span:nth-child(18):hover { color: #FF1493; }
	.name span:nth-child(19):hover { color: #9D00FF; }
	.name span:nth-child(20):hover { color: #00FFFF; }
	.name span:nth-child(21):hover { color: #00FF00; }
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(1rem, 2vw, 1.5rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.social-icons {
		display: flex;
		gap: 1.5rem;
	}
	
	.social-icons a {
		color: #000;
		transition: opacity 0.2s;
	}
	
	.social-icons a:hover {
		opacity: 0.6;
	}
	
	.right-panel {
		display: grid;
		grid-template-rows: repeat(5, 1fr);
		overflow: hidden;
	}
	
	.nav-card {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 3rem;
		text-decoration: none;
		color: #000;
		border-bottom: 3px solid #000;
		transition: all 0.3s ease;
		position: relative;
		background: #fff;
	}
	
	.nav-card:last-child {
		border-bottom: none;
	}
	
	.nav-card:hover {
		padding-left: 4rem;
	}
	
	.about-card {
		background: #fff;
	}
	
	.about-card:hover {
		background: #FF6B35;
	}
	
	.nav-card[data-color="#FF1493"]:hover {
		background: #FF1493;
	}
	
	.nav-card[data-color="#00FF00"]:hover {
		background: #00FF00;
	}
	
	.nav-card[data-color="#00FFFF"]:hover {
		background: #00FFFF;
	}
	
	.nav-card[data-color="#9D00FF"]:hover {
		background: #9D00FF;
	}
	
	.nav-card h2 {
		font-size: clamp(2rem, 4vw, 3.5rem);
		font-weight: 900;
		margin-bottom: 0.5rem;
		line-height: 1;
		transition: color 0.3s ease;
	}
	
	.nav-card:hover h2 {
		color: #fff;
	}
	
	.about-card:hover h2 {
		color: #000;
	}
	
	.nav-card p {
		font-size: clamp(0.875rem, 1.5vw, 1.125rem);
		font-weight: 400;
		opacity: 0.8;
	}
	
	@media (max-width: 768px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
		}
		
		.right-panel {
			overflow-y: auto;
			height: auto;
		}
	}
</style>