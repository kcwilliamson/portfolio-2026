---
import { portfolioPieces } from '../data/portfolio';
const project = portfolioPieces.find(p => p.slug === 'ux-intelligence');
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{project.title} | Katie Sebkhi Williamson</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<a href="/" class="back-link">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
			</a>
			<div class="name-section">
				<h1 class="name">KATIE<br>SEBKHI</h1>
				<div class="taglines">
					<p>Digital Storyteller</p>
					<p>Content Crusader</p>
					<p>UX Intelligence Leader</p>
				</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="three-column-layout">
				<div class="gallery-column">
					{project.sections.flatMap((section) => section.examples).map((example) => (
						<div class="gallery-item">
							<div class="placeholder-image">
								<svg width="100%" height="100%" viewBox="0 0 400 300" fill="none">
									<rect width="400" height="300" fill="rgba(255,255,255,0.1)"/>
									<text x="50%" y="50%" text-anchor="middle" fill="rgba(255,255,255,0.5)" font-size="14" font-family="Inter">
										Image
									</text>
								</svg>
							</div>
							<p class="caption">{example.caption}</p>
						</div>
					))}
				</div>
				
				<div class="content-column">
					<h1 class="page-title">{project.title}</h1>
					<p class="subtitle">{project.subtitle}</p>
					
					{project.sections.map((section) => (
						<div class="section-block">
							<h2 class="section-heading">{section.heading}</h2>
							<p class="section-content">{section.content}</p>
						</div>
					))}
				</div>
			</div>
		</div>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		overflow: hidden;
		height: 100vh;
		background: #FF1493;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 1fr 2fr;
		height: 100vh;
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: opacity 0.2s;
	}
	
	.back-link:hover {
		opacity: 0.6;
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.right-panel {
		background: #FF1493;
		overflow-y: auto;
		padding: 4rem;
		color: #fff;
	}
	
	.three-column-layout {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 4rem;
		max-width: 1400px;
	}
	
	.gallery-column {
		position: sticky;
		top: 4rem;
		align-self: start;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}
	
	.content-column {
		max-width: 900px;
	}
	
	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 900;
		margin-bottom: 1rem;
		line-height: 1;
	}
	
	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		margin-bottom: 4rem;
		opacity: 0.9;
	}
	
	.section-block {
		margin-bottom: 5rem;
	}
	
	.section-heading {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
	}
	
	.section-content {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 2rem;
	}
	
	.gallery-item {
		background: rgba(255, 255, 255, 0.1);
		border: 2px solid rgba(255, 255, 255, 0.2);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s;
	}
	
	.gallery-item:hover {
		transform: scale(1.05);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}
	
	.placeholder-image {
		width: 100%;
		aspect-ratio: 4/3;
		background: rgba(0, 0, 0, 0.2);
	}
	
	.caption {
		padding: 1rem;
		font-size: 0.875rem;
		opacity: 0.9;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
		}
		
		.right-panel {
			padding: 2rem;
		}
		
		.three-column-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.gallery-column {
			position: static;
		}
	}
</style>
