---
import { portfolioPieces } from '../data/portfolio';
const project = portfolioPieces.find(p => p.slug === 'conversation-architecture');
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{project.title} | Katie Sebkhi Williamson</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<a href="/" class="back-link">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
			</a>
			<div class="name-section">
				<h1 class="name">KATIE<br>SEBKHI</h1>
				<div class="taglines">
					<p>Digital Storyteller</p>
					<p>Content Crusader</p>
					<p>UX Intelligence Leader</p>
				</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="three-column-layout">
				<div class="content-column">
					<h1 class="page-title">{project.title}</h1>
					<p class="subtitle">{project.subtitle}</p>
					
					{project.sections.map((section) => (
						<div class="section-block">
							<h2 class="section-heading">{section.heading}</h2>
							<div class="section-content">
								{section.content.split('\n\n').map((paragraph) => {
									// Replace **text** with <strong>text</strong>
									const formatted = paragraph.replaceAll(/\*\*([^*]+?)\*\*/g, '<strong>$1</strong>');
									return <p set:html={formatted} />;
								})}
							</div>
						</div>
					))}
					
					<div class="repo-links">
						<h3>Related Repositories</h3>
						<a href="https://gitlab.cfdata.org/cloudflare/pcx/clue-index/-/tree/577830fa52e00ef49a34577216c9bdcdcb376406/" target="_blank" rel="noopener noreferrer" class="repo-link">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
								<path d="M23.546 10.93L13.067.452c-.604-.603-1.582-.603-2.188 0L8.708 2.627l2.76 2.76c.645-.215 1.379-.07 1.889.441.516.515.658 1.258.438 1.9l2.658 2.66c.645-.223 1.387-.078 1.9.435.721.72.721 1.884 0 2.604-.719.719-1.881.719-2.6 0-.539-.541-.674-1.337-.404-1.996L12.86 8.955v6.525c.176.086.342.203.488.348.713.721.713 1.883 0 2.6-.719.721-1.889.721-2.609 0-.719-.719-.719-1.879 0-2.598.182-.18.387-.316.605-.406V8.835c-.217-.091-.424-.222-.6-.401-.545-.545-.676-1.342-.396-2.009L7.636 3.7.45 10.881c-.6.605-.6 1.584 0 2.189l10.48 10.477c.604.604 1.582.604 2.186 0l10.43-10.43c.605-.603.605-1.582 0-2.187"/>
							</svg>
							CLUE Index (GitLab)
						</a>
						<a href="https://gitlab.cfdata.org/mphillips/frameflow/-/tree/a3a710507ce65c35522a74225d8a6b44bf97a16d/" target="_blank" rel="noopener noreferrer" class="repo-link">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
								<path d="M23.546 10.93L13.067.452c-.604-.603-1.582-.603-2.188 0L8.708 2.627l2.76 2.76c.645-.215 1.379-.07 1.889.441.516.515.658 1.258.438 1.9l2.658 2.66c.645-.223 1.387-.078 1.9.435.721.72.721 1.884 0 2.604-.719.719-1.881.719-2.6 0-.539-.541-.674-1.337-.404-1.996L12.86 8.955v6.525c.176.086.342.203.488.348.713.721.713 1.883 0 2.6-.719.721-1.889.721-2.609 0-.719-.719-.719-1.879 0-2.598.182-.18.387-.316.605-.406V8.835c-.217-.091-.424-.222-.6-.401-.545-.545-.676-1.342-.396-2.009L7.636 3.7.45 10.881c-.6.605-.6 1.584 0 2.189l10.48 10.477c.604.604 1.582.604 2.186 0l10.43-10.43c.605-.603.605-1.582 0-2.187"/>
							</svg>
							Frameflow (GitLab)
						</a>
						<a href="https://github.com/cloudflare/cloudflare-docs" target="_blank" rel="noopener noreferrer" class="repo-link">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							Cloudflare Docs (GitHub)
						</a>
					</div>
				</div>
				
				<div class="gallery-column">
					{project.sections.flatMap((section) => section.examples).map((example, index) => (
						<div class="gallery-item" data-index={index} onclick={`openModal(${index}, '${example.caption.replace(/'/g, "\\'")}')`}>
							<div class="placeholder-image">
								<svg width="100%" height="100%" viewBox="0 0 400 400" fill="none">
									<rect width="400" height="400" fill="rgba(0,0,0,0.1)"/>
									<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="14" font-family="Inter">
										Image
									</text>
								</svg>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
		
		<div id="imageModal" class="modal" onclick="closeModal()">
			<div class="modal-content" onclick="event.stopPropagation()">
				<button class="modal-close" onclick="closeModal()">&times;</button>
				<div class="modal-image">
					<svg width="100%" height="100%" viewBox="0 0 800 800" fill="none">
						<rect width="800" height="800" fill="rgba(0,0,0,0.1)"/>
						<text x="50%" y="50%" text-anchor="middle" fill="rgba(0,0,0,0.5)" font-size="24" font-family="Inter">
							Full Size Image
						</text>
					</svg>
				</div>
				<h3 class="modal-title" id="modalTitle"></h3>
				<p class="modal-description" id="modalDescription"></p>
			</div>
		</div>
	</div>
	
	<script>
		function openModal(index, caption) {
			const modal = document.getElementById('imageModal');
			const title = document.getElementById('modalTitle');
			const description = document.getElementById('modalDescription');
			
			title.textContent = 'Project Example ' + (index + 1);
			description.textContent = caption;
			modal.classList.add('active');
			document.body.style.overflow = 'hidden';
		}
		
		function closeModal() {
			const modal = document.getElementById('imageModal');
			modal.classList.remove('active');
			document.body.style.overflow = 'auto';
		}
		
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') closeModal();
		});
	</script>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		overflow: hidden;
		height: 100vh;
		background: #00FF00;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 1fr 2fr;
		height: 100vh;
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: opacity 0.2s;
	}
	
	.back-link:hover {
		opacity: 0.6;
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.right-panel {
		background: #00FF00;
		overflow-y: auto;
		padding: 4rem;
		color: #000;
	}
	
	.three-column-layout {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		max-width: 1200px;
	}
	
	.gallery-column {
		position: fixed;
		right: 2rem;
		top: 4rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-height: calc(100vh - 8rem);
		overflow-y: auto;
		width: 150px;
	}
	
	.content-column {
		max-width: 100%;
		padding-right: 12rem;
	}
	
	.gallery-column {
		position: fixed;
		right: 2rem;
		top: 4rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-height: calc(100vh - 8rem);
		overflow-y: auto;
		right: 0;
		margin-right: 2rem;
	}
	
	.content-column {
		max-width: 900px;
	}
	
	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 900;
		margin-bottom: 1rem;
		line-height: 1;
	}
	
	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		margin-bottom: 2rem;
		opacity: 0.8;
	}
	
	.repo-links {
		margin-bottom: 4rem;
		padding: 1.5rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		border: 2px solid rgba(255, 255, 255, 0.2);
	}
	
	.repo-links h3 {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: #000;
	}
	
	.repo-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1rem;
		margin-bottom: 0.5rem;
		background: rgba(255, 255, 255, 0.05);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 8px;
		color: #000;
		text-decoration: none;
		font-size: 1rem;
		transition: all 0.3s ease;
	}
	
	.repo-link:hover {
		background: rgba(255, 255, 255, 0.15);
		border-color: rgba(255, 255, 255, 0.4);
		transform: translateX(5px);
	}
	
	.repo-link svg {
		flex-shrink: 0;
	}
	
	.section-block {
		margin-bottom: 5rem;
	}
	
	.section-heading {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
	}
	
	.section-content {
		margin-bottom: 2rem;
	}
	
	.section-content p {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}
	
	.section-content p:last-child {
		margin-bottom: 0;
	}
	
	/* Indent bullet points */
	.section-content p:has(strong:first-child) {
		padding-left: 2rem;
		text-indent: -2rem;
	}
	
	.gallery-item {
		background: rgba(0, 0, 0, 0.05);
		border: 2px solid rgba(0, 0, 0, 0.1);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s;
		cursor: pointer;
		max-width: 150px;
	}
	
	.gallery-item:hover {
		transform: scale(1.1);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
		border-color: rgba(0, 0, 0, 0.3);
	}
	
	.placeholder-image {
		width: 100%;
		aspect-ratio: 1/1;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.9);
		z-index: 1000;
		align-items: center;
		justify-content: center;
	}
	
	.modal.active {
		display: flex;
	}
	
	.modal-content {
		background: #00FF00;
		padding: 3rem;
		border-radius: 20px;
		max-width: 800px;
		width: 90%;
		max-height: 90vh;
		overflow-y: auto;
		position: relative;
		color: #000;
	}
	
	.modal-close {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(0, 0, 0, 0.2);
		border: none;
		color: #000;
		font-size: 2rem;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background 0.3s;
	}
	
	.modal-close:hover {
		background: rgba(0, 0, 0, 0.3);
	}
	
	.modal-image {
		width: 100%;
		margin-bottom: 2rem;
		border-radius: 12px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.1);
	}
	
	.modal-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}
	
	.modal-description {
		font-size: 1.125rem;
		line-height: 1.6;
		opacity: 0.9;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
		}
		
		.right-panel {
			padding: 2rem;
		}
		
		.three-column-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.gallery-column {
			position: static;
		}
	}
</style>
