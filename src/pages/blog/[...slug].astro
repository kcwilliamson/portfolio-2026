---
/**
 * BLOG POST PAGE (DYNAMIC ROUTE)
 * 
 * This template automatically generates a page for each markdown file in src/content/blog/
 * The blog post content is rendered from markdown with proper styling.
 */
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Check if a post-specific OG image exists, otherwise use favicon
const postSpecificImage = `https://katiewilliamsonsebkhi.com/og-images/blog-${post.slug}.png`;
const faviconImage = 'https://katiewilliamsonsebkhi.com/favicon.svg';
const ogImageUrl = postSpecificImage; // Will try post-specific first, fallback handled by meta tag
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{post.data.title} | Katie Sebkhi Williamson</title>
	<meta name="description" content={post.data.description}>
	<meta name="theme-color" content="#0033ff">
	
	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="article">
	<meta property="og:url" content={`https://katiewilliamsonsebkhi.com/blog/${post.slug}`}>
	<meta property="og:title" content={post.data.title}>
	<meta property="og:description" content={post.data.description}>
	<meta property="og:image" content={ogImageUrl}>
	<meta property="og:site_name" content="Katie Williamson Sebkhi">
	<meta property="article:author" content="Katie Williamson Sebkhi">
	{post.data.pubDate && <meta property="article:published_time" content={post.data.pubDate.toISOString()}>}
	
	<!-- Twitter -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:url" content={`https://katiewilliamsonsebkhi.com/blog/${post.slug}`}>
	<meta name="twitter:title" content={post.data.title}>
	<meta name="twitter:description" content={post.data.description}>
	<meta name="twitter:image" content={ogImageUrl}>
	<meta name="twitter:creator" content="@katiewsebkhi">
	
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<div class="name-section">
				<h1 class="name">KATIE<br>WILLIAMSON<br>SEBKHI</h1>
				<div class="taglines">
					<p>UX Intelligence Pioneer</p>
					<p>Digital Storyteller</p>
					<p>Empathetic Leader</p>
				</div>
				<div class="social-icons">
					<a href="https://www.linkedin.com/in/katie-williamson-sebkhi-8787a85b/" target="_blank" aria-label="LinkedIn">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
						</svg>
					</a>
					<a href="https://github.com/kcwilliamson" target="_blank" aria-label="GitHub">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
					<a href="#" class="email-copy-btn" data-email="thekatiewilliamson@gmail.com" aria-label="Email">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/>
						</svg>
					</a>
					<a href="/blog" aria-label="Blog">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M6 2c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6H6zm7 7V3.5L18.5 9H13z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="content-section">
				<div class="breadcrumb-bar">
					<a href="/blog" class="back-to-blogs">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M19 12H5M12 19l-7-7 7-7"/>
						</svg>
						<span>Back to Blogs</span>
					</a>
				</div>
				
				<article class="blog-post">
					{post.data.category && (
						<div class="post-category">{post.data.category}</div>
					)}
					<h2 class="post-title">{post.data.title}</h2>
					<p class="post-description">{post.data.description}</p>
					<p class="post-date">{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
					
					<div class="post-content">
						<Content />
					</div>
				</article>
			</div>
		</div>
	</div>

	<script>
		document.addEventListener('DOMContentLoaded', () => {
			const emailBtn = document.querySelector('.email-copy-btn');
			
			if (emailBtn) {
				emailBtn.addEventListener('click', (e) => {
					e.preventDefault();
					const email = emailBtn.getAttribute('data-email');
					
					navigator.clipboard.writeText(email).then(() => {
						console.log('Email copied:', email);
					}).catch(err => {
						console.error('Failed to copy email:', err);
					});
				});
			}
		});
	</script>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		background: #0033ff;
		margin: 0;
		padding: 0;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 0.6fr 4fr;
		min-height: 100vh;
	}
	
	@media (min-width: 1025px) {
		body {
			overflow: hidden;
			height: 100vh;
		}
		
		.split-container {
			height: 100vh;
		}
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: all 0.2s;
		padding: 1rem;
		margin: -1rem;
		display: inline-block;
		z-index: 100;
		cursor: pointer;
		background: #ffffff;
		border-radius: 50%;
		border: 2px solid rgba(0, 0, 0, 0.1);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}
	
	.back-link:hover {
		transform: translateX(-5px) scale(1.1);
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
		white-space: nowrap;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.social-icons {
		display: flex;
		gap: 1.5rem;
	}
	
	.social-icons a {
		color: #000;
		transition: opacity 0.2s;
	}
	
	.social-icons a:hover {
		opacity: 0.6;
	}
	
	.right-panel {
		background: #fff;
		overflow-y: auto;
		overflow-x: hidden;
		padding: 0;
		color: #000000;
		min-height: 100vh;
	}
	
	.content-section {
		padding: 0;
		max-width: 100%;
		background: #fff;
		min-height: 100vh;
	}
	
	.breadcrumb-bar {
		background: #f5f5f5;
		padding: 2rem 4rem;
		border-bottom: 3px solid #000;
	}
	
	.back-to-blogs {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: #000;
		text-decoration: none;
		font-size: 1rem;
		font-weight: 700;
		padding: 0.75rem 1.5rem;
		background: #fff;
		border: 2px solid #000;
		border-radius: 50px;
		transition: all 0.2s;
	}
	
	.back-to-blogs:hover {
		background: #000;
		color: #fff;
	}
	
	.back-to-blogs:hover svg {
		stroke: #fff;
	}
	
	.back-to-blogs svg {
		transition: stroke 0.2s;
	}
	
	.blog-post {
		background: #fff;
		padding: 4rem;
		padding-bottom: 8rem;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.post-category {
		font-size: 0.875rem;
		font-weight: 700;
		color: #666;
		text-transform: uppercase;
		margin-bottom: 1rem;
		letter-spacing: 0.05em;
	}
	
	.post-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		margin-bottom: 1rem;
		color: #0033ff;
	}
	
	.post-description {
		font-size: 1.25rem;
		line-height: 1.5;
		color: #333;
		margin-bottom: 1rem;
	}
	
	.post-date {
		font-size: 0.875rem;
		color: #666;
		font-weight: 600;
		margin-bottom: 2rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid #e5e5e5;
	}
	
	.post-content {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #000;
	}
	
	.post-content :global(h2) {
		font-size: 2rem;
		font-weight: 700;
		margin-top: 3rem;
		margin-bottom: 1rem;
		color: #0033ff;
	}
	
	.post-content :global(h3) {
		font-size: 1.5rem;
		font-weight: 700;
		margin-top: 2rem;
		margin-bottom: 1rem;
		color: #0033ff;
	}
	
	.post-content :global(p) {
		margin-bottom: 1.5rem;
	}
	
	.post-content :global(ul),
	.post-content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 2rem;
	}
	
	.post-content :global(li) {
		margin-bottom: 0.5rem;
	}
	
	.post-content :global(strong) {
		font-weight: 700;
	}
	
	.post-content :global(a) {
		color: #0033ff;
		text-decoration: underline;
	}
	
	.post-content :global(a:hover) {
		opacity: 0.7;
	}
	
	.post-content :global(blockquote) {
		border-left: 4px solid #0033ff;
		padding-left: 1.5rem;
		margin: 2rem 0;
		font-style: italic;
		color: #333;
	}
	
	.post-content :global(code) {
		background: #f5f5f5;
		padding: 0.2rem 0.4rem;
		border-radius: 3px;
		font-family: 'Courier New', monospace;
		font-size: 0.9em;
	}
	
	.post-content :global(pre) {
		background: #000;
		color: #fff;
		padding: 1.5rem;
		border-radius: 8px;
		overflow-x: auto;
		margin: 2rem 0;
	}
	
	.post-content :global(pre code) {
		background: transparent;
		padding: 0;
	}
	
	/* Responsive YouTube video embed */
	.post-content :global(iframe) {
		max-width: 100%;
		width: 100%;
		height: auto;
		aspect-ratio: 16 / 9;
		border-radius: 8px;
		margin: 2rem 0;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto auto;
			min-height: auto;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
			position: static;
			height: auto;
		}
		
		.right-panel {
			padding: 0;
			height: auto;
			overflow-y: visible;
		}
		
		.content-section {
			min-height: auto;
		}
		
		.breadcrumb-bar {
			padding: 1.5rem 2rem;
		}
		
		.blog-post {
			padding: 2rem;
			padding-bottom: 4rem;
		}
		
		.post-title {
			font-size: 2rem;
		}
		
		.post-description {
			font-size: 1.125rem;
		}
	}
</style>
