			<h1 class="post-title">{post.data.title}</h1>
			<p class="post-description">{post.data.description}</p>
			<p class="post-meta">{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
			
