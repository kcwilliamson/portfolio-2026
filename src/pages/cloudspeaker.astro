---
import { portfolioPieces } from '../data/portfolio';
const project = portfolioPieces.find(p => p.slug === 'cloudspeaker');
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{project.title} | Katie Sebkhi Williamson</title>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
	<div class="split-container">
		<div class="left-panel">
			<a href="/" class="back-link">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
			</a>
			<div class="name-section">
				<h1 class="name">KATIE<br>WILLIAMSON<br>SEBKHI</h1>
				<div class="taglines">
					<p>Digital Storyteller</p>
					<p>Content Crusader</p>
					<p>UX Intelligence Leader</p>
				</div>
			</div>
		</div>
		
		<div class="right-panel">
			<div class="header-section">
				<h1 class="page-title">{project.title}</h1>
				<p class="subtitle">{project.subtitle}</p>
			</div>
			<div class="three-column-layout">
				<div class="content-column">
					{project.sections.map((section) => (
						<div class="section-block">
							<h2 class="section-heading">{section.heading}</h2>
							<div class="section-content">
								{section.content.split('\n\n').map((paragraph) => {
									// Replace **text** with <strong>text</strong>
									const formatted = paragraph.replaceAll(/\*\*([^*]+?)\*\*/g, '<strong>$1</strong>');
									return <p set:html={formatted} />;
								})}
							</div>
						</div>
					))}
				</div>
				
				{project.sections.flatMap((section) => section.examples).length > 0 && (
					<div class="gallery-column">
						{project.sections.flatMap((section) => section.examples).map((example, index) => (
							<div class="gallery-item" data-index={index} data-caption={example.caption} data-type={example.type} data-url={example.url}>
								{example.type === 'video' ? (
									<video class="gallery-thumbnail" muted playsinline>
										<source src={example.url} type="video/mp4" />
									</video>
								) : (
									<img src={example.url} alt={example.caption} class="gallery-thumbnail" />
								)}
							</div>
						))}
					</div>
				)}
			</div>
		</div>
		
		<div id="imageModal" class="modal">
			<button class="modal-nav modal-nav-prev" id="modalPrevBtn">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
					<path d="M15 18l-6-6 6-6"/>
				</svg>
			</button>
			<div class="modal-content">
				<button class="modal-close" id="modalCloseBtn">&times;</button>
				<div class="modal-media" id="modalMedia">
					<!-- Media content will be inserted here by JavaScript -->
				</div>
				<h3 class="modal-title" id="modalTitle"></h3>
				<p class="modal-description" id="modalDescription"></p>
			</div>
			<button class="modal-nav modal-nav-next" id="modalNextBtn">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
					<path d="M9 18l6-6-6-6"/>
				</svg>
			</button>
		</div>
	</div>
	
	<script>
		let currentIndex = 0;
		let allItems = [];
		
		function openModal(index, caption, type, url) {
			currentIndex = parseInt(index);
			const modal = document.getElementById('imageModal');
			const title = document.getElementById('modalTitle');
			const description = document.getElementById('modalDescription');
			const mediaContainer = document.getElementById('modalMedia');
			const prevBtn = document.getElementById('modalPrevBtn');
			const nextBtn = document.getElementById('modalNextBtn');
			
			title.textContent = 'Project Example ' + (currentIndex + 1);
			description.textContent = caption;
			
			// Clear previous media
			mediaContainer.innerHTML = '';
			
			// Insert appropriate media type
			if (type === 'video') {
				const video = document.createElement('video');
				video.controls = true;
				video.className = 'modal-video';
				video.style.width = '100%';
				video.style.borderRadius = '12px';
				
				const source = document.createElement('source');
				source.src = url;
				source.type = 'video/mp4';
				
				video.appendChild(source);
				mediaContainer.appendChild(video);
			} else {
				const img = document.createElement('img');
				img.src = url;
				img.alt = caption;
				img.className = 'modal-image';
				img.style.width = '100%';
				img.style.borderRadius = '12px';
				mediaContainer.appendChild(img);
			}
			
			// Update navigation button states
			prevBtn.disabled = currentIndex === 0;
			nextBtn.disabled = currentIndex === allItems.length - 1;
			
			modal.classList.add('active');
			document.body.style.overflow = 'hidden';
		}
		
		function closeModal() {
			const modal = document.getElementById('imageModal');
			const mediaContainer = document.getElementById('modalMedia');
			
			// Stop any playing videos
			const video = mediaContainer.querySelector('video');
			if (video) {
				video.pause();
			}
			
			modal.classList.remove('active');
			document.body.style.overflow = 'auto';
		}
		
		function navigateModal(direction) {
			const newIndex = currentIndex + direction;
			if (newIndex >= 0 && newIndex < allItems.length) {
				const item = allItems[newIndex];
				const caption = item.getAttribute('data-caption');
				const type = item.getAttribute('data-type');
				const url = item.getAttribute('data-url');
				openModal(newIndex, caption, type, url);
			}
		}
		
		document.addEventListener('keydown', (e) => {
			const modal = document.getElementById('imageModal');
			if (!modal.classList.contains('active')) return;
			
			if (e.key === 'Escape') {
				closeModal();
			} else if (e.key === 'ArrowLeft') {
				navigateModal(-1);
			} else if (e.key === 'ArrowRight') {
				navigateModal(1);
			}
		});
		
		// Add click handlers to gallery items
		document.addEventListener('DOMContentLoaded', () => {
			const galleryItems = document.querySelectorAll('.gallery-item');
			allItems = Array.from(galleryItems);
			
			galleryItems.forEach((item) => {
				item.addEventListener('click', () => {
					const index = item.getAttribute('data-index');
					const caption = item.getAttribute('data-caption');
					const type = item.getAttribute('data-type');
					const url = item.getAttribute('data-url');
					openModal(index, caption, type, url);
				});
			});
			
			// Add close button handler
			const closeBtn = document.getElementById('modalCloseBtn');
			if (closeBtn) {
				closeBtn.addEventListener('click', closeModal);
			}
			
			// Add navigation button handlers
			const prevBtn = document.getElementById('modalPrevBtn');
			const nextBtn = document.getElementById('modalNextBtn');
			if (prevBtn) {
				prevBtn.addEventListener('click', (e) => {
					e.stopPropagation();
					navigateModal(-1);
				});
			}
			if (nextBtn) {
				nextBtn.addEventListener('click', (e) => {
					e.stopPropagation();
					navigateModal(1);
				});
			}
			
			// Add click outside modal to close
			const modal = document.getElementById('imageModal');
			const modalContent = document.querySelector('.modal-content');
			if (modal) {
				modal.addEventListener('click', (e) => {
					if (e.target === modal) {
						closeModal();
					}
				});
			}
			if (modalContent) {
				modalContent.addEventListener('click', (e) => {
					e.stopPropagation();
				});
			}
			
			// Add hover effect for video thumbnails
			const videoThumbnails = document.querySelectorAll('video.gallery-thumbnail');
			videoThumbnails.forEach(video => {
				video.parentElement.addEventListener('mouseenter', () => {
					video.play().catch(() => {});
				});
				video.parentElement.addEventListener('mouseleave', () => {
					video.pause();
					video.currentTime = 0;
				});
			});
		});
	</script>
			</div>
		</div>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		overflow: hidden;
		height: 100vh;
		background: #FF1493;
	}
	
	.split-container {
		display: grid;
		grid-template-columns: 1fr 4fr;
		height: 100vh;
	}
	
	.left-panel {
		background: #fff;
		border-right: 3px solid #000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem;
		position: relative;
	}
	
	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		color: #000;
		text-decoration: none;
		transition: all 0.2s;
		padding: 1rem;
		margin: -1rem;
		display: inline-block;
		z-index: 100;
		cursor: pointer;
		background: #ffffff;
		border-radius: 50%;
		border: 2px solid rgba(0, 0, 0, 0.1);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}
	
	.back-link:hover {
		transform: translateX(-5px) scale(1.1);
	}
	
	.name-section {
		text-align: left;
	}
	
	.name {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.02em;
		white-space: nowrap;
	}
	
	.taglines {
		margin-bottom: 2rem;
	}
	
	.taglines p {
		font-size: clamp(0.875rem, 1.5vw, 1.25rem);
		font-weight: 400;
		line-height: 1.4;
	}
	
	.right-panel {
		background: #FFFFFF;
		overflow-y: auto;
		overflow-x: hidden;
		padding: 0;
		color: #000000;
	}
	
	.header-section {
		background: #FF1493;
		color: #FFFFFF;
		padding: 3rem 4rem;
		width: 100%;
	}
	
	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 900;
		margin-bottom: 1rem;
		line-height: 1;
		color: #FFFFFF;
	}
	
	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		color: #FFFFFF;
	}
	
	.three-column-layout {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		max-width: 100%;
		background: #FFFFFF;
		padding: 4rem;
	}
	
	.gallery-column {
		position: fixed;
		right: 2rem;
		top: 12rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-height: calc(100vh - 14rem);
		overflow-y: auto;
		width: 150px;
	}
	
	.content-column {
		max-width: 100%;
		padding-right: 10rem;
	}
	
	.section-block {
		margin-bottom: 5rem;
	}
	
	.section-heading {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
		color: #000000;
	}
	
	.section-content {
		margin-bottom: 2rem;
	}
	
	.section-content p {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 1.5rem;
		color: #000000;
	}
	
	.section-content p:last-child {
		margin-bottom: 0;
	}
	
	/* Indent bullet points */
	.section-content p:has(strong:first-child) {
		padding-left: 2rem;
		text-indent: -2rem;
	}
	
	.gallery-item {
		background: rgba(255, 255, 255, 0.1);
		border: 2px solid rgba(255, 255, 255, 0.2);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s;
		cursor: pointer;
		max-width: 150px;
	}
	
	.gallery-item:hover {
		transform: scale(1.1);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
		border-color: rgba(255, 255, 255, 0.5);
	}
	
	.gallery-thumbnail {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
	
	.modal {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.9);
		z-index: 1000;
		align-items: center;
		justify-content: center;
	}
	
	.modal.active {
		display: flex;
	}
	
	.modal-content {
		background: #FF1493;
		padding: 3rem;
		border-radius: 20px;
		max-width: 1200px;
		width: 95%;
		max-height: 95vh;
		overflow-y: auto;
		position: relative;
		color: #fff;
	}
	
	.modal-close {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(255, 255, 255, 0.2);
		border: none;
		color: #fff;
		font-size: 2rem;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background 0.3s;
	}
	
	.modal-close:hover {
		background: rgba(255, 255, 255, 0.3);
	}
	
	.modal-nav {
		position: fixed;
		top: 50%;
		transform: translateY(-50%);
		background: rgba(255, 255, 255, 0.2);
		border: none;
		color: #fff;
		font-size: 3rem;
		width: 60px;
		height: 60px;
		border-radius: 50%;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.3s;
		z-index: 1001;
		backdrop-filter: blur(10px);
	}
	
	.modal-nav:hover {
		background: rgba(255, 255, 255, 0.4);
		transform: translateY(-50%) scale(1.1);
	}
	
	.modal-nav:disabled {
		opacity: 0.3;
		cursor: not-allowed;
	}
	
	.modal-nav svg {
		stroke: #fff;
	}
	
	.modal-nav-prev {
		left: 2rem;
	}
	
	.modal-nav-next {
		right: 2rem;
	}
	
	.modal-media {
		width: 100%;
		margin-bottom: 2rem;
		border-radius: 12px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.2);
	}
	
	.modal-image, .modal-video {
		width: 100%;
		border-radius: 12px;
		display: block;
	}
	
	.modal-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}
	
	.modal-description {
		font-size: 1.125rem;
		line-height: 1.6;
		opacity: 0.9;
	}
	
	@media (max-width: 1024px) {
		.split-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
		
		.left-panel {
			border-right: none;
			border-bottom: 3px solid #000;
			padding: 2rem;
		}
		
		.right-panel {
			padding: 2rem;
		}
		
		.three-column-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.gallery-column {
			position: static;
		}
	}
</style>
